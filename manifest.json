{
  "manifest_version": 2,

  "name": "Mint Split",
  "description": "Conveniently split Mint transactions in half",
  "version": "1.1",

  "content_scripts": [
    {
      "matches": ["https://mint.intuit.com/*"],
      "js": ["mint.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png",
      "128": "images/icon128.png"
    }
  },

  "web_accessible_resources": ["images/*.png"]
}